{
    "version": 2,
    "builds": [
      {
        "src": "backend/index.js",  
        "use": "@vercel/node"     
      },
      {
        "src": "frontend/next.config.mjs", 
        "use": "@vercel/next"             
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",   
        "dest": "/backend/index.js"  
      },
      {
        "src": "/(.*)",       
        "dest": "/frontend/$1"  
      }
    ]
  }
  